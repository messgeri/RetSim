<UserControl x:Class="RetSimDesktop.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:RetSimDesktop"
             xmlns:ret="clr-namespace:RetSim.Units.Player.Static;assembly=RetSim"
             xmlns:ret2="clr-namespace:RetSim.Data;assembly=RetSim"
             xmlns:ret3="clr-namespace:RetSim.Units.Player;assembly=RetSim"
             xmlns:model="clr-namespace:RetSimDesktop.Model"
             xmlns:viewmodel="clr-namespace:RetSimDesktop.ViewModel"
             d:DataContext="{d:DesignInstance viewmodel:RetSimUIModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="900" d:Background="White">
    <UserControl.Resources>
        <local:StringEmptyOrZeroConverter x:Key="StringEmptyConverter" />
        <local:ComparisonConverter x:Key="ComparisonConverter" />
        <local:BossToIDConverter x:Key="BossToIDConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="5,5,5,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="80" Content="Reset" Click="ResetButton_Click"></Button>
            </StackPanel>
            <Expander IsExpanded="True" Margin="10" Header="Sim">
                <WrapPanel>
                    <GroupBox Margin="5" Height="110" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Player
                        </GroupBox.Header>
                        <StackPanel>
                            <Grid Width="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox>
                                    <ComboBoxItem IsSelected="{Binding Path=PlayerSettings.SelectedRace, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static ret:Races.Human}}">Human</ComboBoxItem>
                                    <ComboBoxItem IsSelected="{Binding Path=PlayerSettings.SelectedRace, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static ret:Races.Dwarf}}">Dwarf</ComboBoxItem>
                                    <ComboBoxItem IsSelected="{Binding Path=PlayerSettings.SelectedRace, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static ret:Races.Draenei}}">Draenei</ComboBoxItem>
                                    <ComboBoxItem IsSelected="{Binding Path=PlayerSettings.SelectedRace, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static ret:Races.BloodElf}}">Blood Elf</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <StackPanel>
                                <RadioButton Margin="0,2,0,2" x:Name="Aldor" Content="Aldor" GroupName="ShattrathFaction" IsChecked="{Binding Path=PlayerSettings.SelectedShattrathFaction, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static ret3:ShattrathFaction.Aldor}}"/>
                                <RadioButton Margin="0,2,0,2" x:Name="Scryer" Content="Scryer" GroupName="ShattrathFaction" IsChecked="{Binding Path=PlayerSettings.SelectedShattrathFaction, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static ret3:ShattrathFaction.Scryer}}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" Height="110">
                        <GroupBox.Header>
                            Encounter
                        </GroupBox.Header>
                        <StackPanel>
                            <Grid Margin="0,2,0,2" Width="180">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="BossesComboBox" DisplayMemberPath="Name" SelectedItem="{Binding EncounterSettings.EncounterID, Converter={StaticResource BossToIDConverter}}"></ComboBox>
                            </Grid>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Fight Duration (min)"/>
                                <TextBox Grid.Column="2" HorizontalContentAlignment="Right" PreviewTextInput="NumberValidationTextBox" ToolTipService.InitialShowDelay="0" ToolTip="Time in seconds." Text="{Binding EncounterSettings.MinFightDurationSeconds, Converter={StaticResource StringEmptyConverter}, ConverterParameter='1'}" />
                            </Grid>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Fight Duration (max)"/>
                                <TextBox Grid.Column="2" HorizontalContentAlignment="Right" PreviewTextInput="NumberValidationTextBox" ToolTipService.InitialShowDelay="0" ToolTip="Time in seconds." Text="{Binding EncounterSettings.MaxFightDurationSeconds, Converter={StaticResource StringEmptyConverter}, ConverterParameter='1'}" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" Height="110" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Sim
                        </GroupBox.Header>
                        <StackPanel>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Simulations"/>
                                <TextBox Grid.Column="2" HorizontalContentAlignment="Right" PreviewTextInput="NumberValidationTextBox" Text="{Binding SimSettings.SimulationCount, Converter={StaticResource StringEmptyConverter}, ConverterParameter='1'}" />
                            </Grid>
                            <Grid Margin="0,2,0,2" x:Name="MaxCSDelay" ToolTipService.InitialShowDelay="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Max CS Delay"/>
                                <TextBox Grid.Column="2" HorizontalContentAlignment="Right" PreviewTextInput="NumberValidationTextBox" Text="{Binding SimSettings.MaxCSDelay, Converter={StaticResource StringEmptyConverter}, ConverterParameter='1'}" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" Height="110" >
                        <GroupBox.Header>
                            Phases
                        </GroupBox.Header>
                        <StackPanel>
                            <CheckBox Content = "Phase 1" HorizontalAlignment = "Left" IsChecked="{Binding SelectedPhases.Phase1Selected}" VerticalAlignment = "Top"  />
                            <CheckBox Content = "Phase 2" HorizontalAlignment = "Left" IsChecked="{Binding SelectedPhases.Phase2Selected}" VerticalAlignment = "Top"  />
                            <CheckBox Content = "Phase 3" HorizontalAlignment = "Left" IsChecked="{Binding SelectedPhases.Phase3Selected}" VerticalAlignment = "Top"  />
                            <CheckBox Content = "Phase 4" HorizontalAlignment = "Left" IsChecked="{Binding SelectedPhases.Phase4Selected}"  VerticalAlignment = "Top"  />
                            <CheckBox Content = "Phase 5" HorizontalAlignment = "Left" IsChecked="{Binding SelectedPhases.Phase5Selected}"  VerticalAlignment = "Top"  />
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left" Height="110">
                        <GroupBox.Header>
                            Gems
                        </GroupBox.Header>
                        <StackPanel>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Red Sockets"/>
                                <Button Grid.Column="2" Padding="0" Click="RedSocketSelect_Click">...</Button>
                            </Grid>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Yellow Sockets"/>
                                <Button Grid.Column="2" Padding="0" Click="YellowSocketSelect_Click">...</Button>
                            </Grid>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Blue Sockets"/>
                                <Button Grid.Column="2" Padding="0" Click="BlueSocketSelect_Click">...</Button>
                            </Grid>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Meta Sockets"/>
                                <Button Grid.Column="2" Padding="0" Click="MetaSocketSelect_Click">...</Button>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>
            </Expander>
            <Expander IsExpanded="True" Margin="10" Header="Talents">
                <WrapPanel>
                    <GroupBox Margin="5" Width="230" Height="295" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Holy
                        </GroupBox.Header>
                        <StackPanel>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.DivineStrengthEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Divine Strength"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.DivineStrengthRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.DivineIntellectEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Divine Intellect"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.DivineIntellectRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" Width="230" Height="295" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Protection
                        </GroupBox.Header>
                        <StackPanel>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.PrecisionEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Precision"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.PrecisionRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" Width="230" Height="295" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Retribution
                        </GroupBox.Header>
                        <StackPanel>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.BenedictionEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Benediction"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.BenedictionRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.ImprovedJudgementEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Improved Judgement"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.ImprovedJudgementRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.ConvictionEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Conviction"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.ConvictionRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.CrusadeEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Crusade"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.CrusadeRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.TwoHandedWeaponSpecializationEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Two-Handed Weapon Spec."/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.TwoHandedWeaponSpecializationRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,4,0,4" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.SanctityAuraEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Sanctity Aura"/>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.ImprovedSanctityAuraEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Improved Sanctity Aura"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.ImprovedSanctityAuraRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.VengeanceEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Vengeance"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.VengeanceRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.SanctifiedJudgementEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Sanctified Judgement"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.SanctifiedJudgementRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.SanctifiedSealsEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Sanctified Seals"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.SanctifiedSealsRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                            <CheckBox Margin="0,2,0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsChecked="{Binding SelectedTalents.FanaticismEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="0" Padding="0" VerticalAlignment="Center" Content="Fanaticism"/>
                                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedTalents.FanaticismRank}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type sys:Int32}">
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </Grid>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>
            </Expander>
            <Expander IsExpanded="True" Margin="10" Header="Consumables">
                <WrapPanel>
                    <GroupBox Margin="5" Width="200" Height="180" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Battle Elixir
                        </GroupBox.Header>
                        <StackPanel>
                            <RadioButton Margin="0,2,0,2" x:Name="NoBattleElixir" Content="None" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.None}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="FlaskofRelentlessAssault" Content="Flask of Relentless Assault" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.FlaskofRelentlessAssault}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="ElixirofDemonslaying" Content="Elixir of Demonslaying" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.ElixirofDemonslaying}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="FelStrengthElixir" Content="Fel Strength Elixir" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.FelStrengthElixir}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="ElixirofMajorStrength" Content="Elixir of Major Strength" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.ElixirofMajorStrength}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="ElixirofMajorAgility" Content="Elixir of Major Agility" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.ElixirofMajorAgility}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="ElixirofMastery" Content="Elixir of Mastery" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.ElixirofMastery}}"/>
                            <RadioButton Margin="0,2,0,2" x:Name="ElixiroftheMongoose" Content="Elixir of the Mongoose" GroupName="BattleElixir" IsChecked="{Binding Path=SelectedConsumables.SelectedBattleElixir, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:BattleElixir.ElixiroftheMongoose}}"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="5" Width="200" Height="180" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            Guardian Elixir
                        </GroupBox.Header>
