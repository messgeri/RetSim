                                <CheckBox Margin="0,4,0,4" x:Name="BloodFrenzy" Content="Blood Frenzy" IsChecked="{Binding SelectedDebuffs.BloodFrenzyEnabled}">
                                </CheckBox>
                                <CheckBox Margin="0,4,0,4" x:Name="HuntersMark" Content="Improved Hunter's Mark" IsChecked="{Binding SelectedDebuffs.HuntersMarkEnabled}">
                                </CheckBox>
                                <Grid Margin="0,2,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Margin="0,2,0,2" x:Name="ExposeWeakness" Content="Expose Weakness" IsChecked="{Binding SelectedDebuffs.ExposeWeaknessEnabled}">
                                    </CheckBox>
                                    <TextBox Grid.Column="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" ToolTipService.InitialShowDelay="0" ToolTip="The Survival Hunter's Agility value." PreviewTextInput="NumberValidationTextBox" Text="{Binding SelectedDebuffs.HunterAgility, Converter={StaticResource StringEmptyConverter}, ConverterParameter='4'}" />
                                </Grid>
                                <CheckBox x:Name="FaerieFire" Margin="0,2,0,2" VerticalContentAlignment="Center" IsChecked="{Binding SelectedDebuffs.FaerieFireEnabled}">
                                    <ComboBox Width="200">
                                        <ComboBoxItem IsSelected="{Binding Path=SelectedDebuffs.SelectedFaerieFire, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:FaerieFire.FaerieFire}}">Faerie Fire</ComboBoxItem>
                                        <ComboBoxItem IsSelected="{Binding Path=SelectedDebuffs.SelectedFaerieFire, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:FaerieFire.ImpFaerieFire}}">Imp. Faerie Fire</ComboBoxItem>
                                    </ComboBox>
                                </CheckBox>
                                <CheckBox Margin="0,4,0,4" x:Name="CurseofRecklessness" Content="Curse of Recklessness" IsChecked="{Binding SelectedDebuffs.CurseofRecklessnessEnabled}">
                                </CheckBox>
                                <CheckBox x:Name="CurseoftheElements" Margin="0,2,0,2" VerticalContentAlignment="Center" IsChecked="{Binding SelectedDebuffs.CurseoftheElementsEnabled}">
                                    <ComboBox Width="200">
                                        <ComboBoxItem IsSelected="{Binding Path=SelectedDebuffs.SelectedCurseoftheElements, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:CurseoftheElements.CurseoftheElements}}">Curse of the Elements</ComboBoxItem>
                                        <ComboBoxItem IsSelected="{Binding Path=SelectedDebuffs.SelectedCurseoftheElements, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static model:CurseoftheElements.Malediction}}">Malediction</ComboBoxItem>
                                    </ComboBox>
                                </CheckBox>
                                <CheckBox Margin="0,4,0,4" x:Name="ImprovedShadowBolt" Content="Improved Shadow Bolt" IsChecked="{Binding SelectedDebuffs.ImprovedShadowBoltEnabled}">
                                </CheckBox>
                                <CheckBox Margin="0,4,0,4" x:Name="Misery" Content="Misery" IsChecked="{Binding SelectedDebuffs.MiseryEnabled}">
                                </CheckBox>
                                <CheckBox Margin="0,4,0,4" x:Name="ShadowWeaving" Content="Shadow Weaving" IsChecked="{Binding SelectedDebuffs.ShadowWeavingEnabled}">
                                </CheckBox>
                                <CheckBox Margin="0,4,0,4" x:Name="ImprovedScorch" Content="Improved Scorch" IsChecked="{Binding SelectedDebuffs.ImprovedScorchEnabled}">
                                </CheckBox>
                            </StackPanel>
                        </WrapPanel>
                    </GroupBox>
                </WrapPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
